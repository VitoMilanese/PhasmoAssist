<Window x:Class="PhasmoAssist.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhasmoAssist"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        WindowState="Maximized"
        ShowInTaskbar="False">

    <Grid VerticalAlignment="Stretch"
          HorizontalAlignment="Stretch">
        <Grid Margin="30"
              VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="211.00"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0"
                  VerticalAlignment="Center"
                  Height="100">
                <TextBlock x:Name="tbAssistTimer"
                           Grid.Column="0"
                           Grid.RowSpan="3"
                           Grid.Row="0"
                           FontSize="35"
                           Foreground="White"/>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="tbEvidences"
                           Grid.Row="0"
                           FontSize="25"
                           TextWrapping="Wrap"
                           Foreground="White"/>

                <TextBlock x:Name="tbGhosts"
                           Grid.Row="1"
                           FontSize="25"
                           TextWrapping="Wrap"
                           Foreground="White"/>

                <TextBlock x:Name="tbGhostsHidden"
                           Grid.Row="2"
                           FontSize="25"
                           TextWrapping="Wrap"
                           TextDecorations="Strikethrough"
                           Foreground="LightGray"/>
            </Grid>
        </Grid>

        <Border x:Name="About"
                Margin="30"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                CornerRadius="30"
                BorderBrush="White"
                Background="#AA000000"
                BorderThickness="1">
            <StackPanel Orientation="Vertical"
                        Margin="15"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                <Border Height="5"/>
                <TextBlock FontSize="22"
                           Foreground="White"
                           HorizontalAlignment="Center">
                    <Run Text="Phasmophobia Assist by"/>
                    <Hyperlink Click="Hyperlink_Click"
                               FontWeight="Bold"
                               Foreground="White"
                               NavigateUri="https://steamcommunity.com/profiles/76561199034666380/">
                        Bad Wolf
                    </Hyperlink>
                </TextBlock>
                <TextBlock FontSize="15"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Text="v. 1.2.0 - 2025"/>
                <Border Height="15"/>
                <TextBlock x:Name="tbBlink1"
                           FontSize="18"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Text="Please, support my friends:"/>
                <TextBlock x:Name="tbBlink2"
                           Visibility="Collapsed"
                           FontSize="18"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Text="Будь ласка, підтримайте моїх друзів:"/>
                <Border Height="10"/>

                <UniformGrid Columns="2">
                    <Grid HorizontalAlignment="Center"
                          Margin="0 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Image Grid.RowSpan="2"
                               Source="/Images/Lissanna.png"
                               Width="64"
                               Height="64" />

                        <TextBlock Grid.Column="2"
                                   Grid.Row="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <Hyperlink Click="Hyperlink_Click"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       NavigateUri="https://steamcommunity.com/id/funbimbomtime/">
                                Lissanna
                            </Hyperlink>
                        </TextBlock>
                    
                        <StackPanel Grid.Column="2"
                                    Grid.Row="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Image Source="/Images/Steam.png"
                                   Width="32"
                                   Height="32"
                                   Cursor="Hand"
                                   Tag="https://steamcommunity.com/id/funbimbomtime/"
                                   MouseDown="Image_MouseDown"/>
                            <Border Width="10"/>
                            <Image Source="/Images/Twitch.png"
                                   Width="32"
                                   Height="32"
                                   Cursor="Hand"
                                   Tag="https://www.twitch.tv/lissanna_add"
                                   MouseDown="Image_MouseDown"/>
                        </StackPanel>
                    </Grid>

                    <Grid HorizontalAlignment="Center"
                          Margin="0 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Image Grid.RowSpan="2"
                               Source="/Images/Kystick.png"
                               Width="64"
                               Height="64" />

                        <TextBlock Grid.Column="2"
                                   Grid.Row="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <Hyperlink Click="Hyperlink_Click"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       NavigateUri="https://steamcommunity.com/profiles/76561199097621805/">
                                Kystick
                            </Hyperlink>
                        </TextBlock>

                        <StackPanel Grid.Column="2"
                                    Grid.Row="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Image Source="/Images/Steam.png"
                                   Width="32"
                                   Height="32"
                                   Cursor="Hand"
                                   Tag="https://steamcommunity.com/profiles/76561199097621805/"
                                   MouseDown="Image_MouseDown"/>
                            <Border Width="10"/>
                            <Image Source="/Images/Twitch.png"
                                   Width="32"
                                   Height="32"
                                   Cursor="Hand"
                                   Tag="https://www.twitch.tv/kystick0"
                                   MouseDown="Image_MouseDown"/>
                        </StackPanel>
                    </Grid>

                    <Grid HorizontalAlignment="Center"
                          Margin="0 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Image Grid.RowSpan="2"
                               Source="/Images/ZlotuH.png"
                               Width="64"
                               Height="64" />

                        <TextBlock Grid.Column="2"
                                   Grid.Row="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <Hyperlink Click="Hyperlink_Click"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       NavigateUri="https://steamcommunity.com/profiles/76561198144346215">
                                ZlotuH
                            </Hyperlink>
                        </TextBlock>

                        <StackPanel Grid.Column="2"
                                    Grid.Row="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Image Source="/Images/Steam.png"
                                   Width="32"
                                   Height="32"
                                   Cursor="Hand"
                                   Tag="https://steamcommunity.com/profiles/76561198144346215"
                                   MouseDown="Image_MouseDown"/>
                            <Border Width="10"/>
                            <Image Source="/Images/Twitch.png"
                                   Width="32"
                                   Height="32"
                                   Cursor="Hand"
                                   Tag="https://www.twitch.tv/zlotuh"
                                   MouseDown="Image_MouseDown"/>
                        </StackPanel>
                    </Grid>

                    <Grid HorizontalAlignment="Center"
                          Margin="0 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Image Grid.RowSpan="2"
                               Source="/Images/LuckyMan.png"
                               Width="64"
                               Height="64" />

                        <TextBlock Grid.Column="2"
                                   Grid.Row="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center">
                            <Hyperlink Click="Hyperlink_Click"
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       NavigateUri="https://steamcommunity.com/profiles/76561199426961885/">
                                Lucky Man
                            </Hyperlink>
                        </TextBlock>

                        <StackPanel Grid.Column="2"
                                    Grid.Row="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Image Source="/Images/Steam.png"
                                   Width="32"
                                   Height="32"
                                   Cursor="Hand"
                                   Tag="https://steamcommunity.com/profiles/76561199426961885/"
                                   MouseDown="Image_MouseDown"/>
                            <Border Width="10"/>
                            <Image Source="/Images/Discord.png"
                                   Width="32"
                                   Height="32"
                                   Cursor="Hand"
                                   Tag="https://discord.gg/SgnkVNR6"
                                   MouseDown="Image_MouseDown"/>
                        </StackPanel>
                    </Grid>
                </UniformGrid>
                
                <Border Height="10"/>
                <TextBlock x:Name="tbBlink3"
                           FontSize="18"
                           Foreground="White"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Text="Press F5 to close this window"/>
                <TextBlock x:Name="tbBlink4"
                           Visibility="Collapsed"
                           FontSize="18"
                           Foreground="White"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Text="Натисніть F5, щоб закрити це вікно"/>
                <Border Height="5"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
